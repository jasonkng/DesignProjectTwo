<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/list_unique_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/list_date"
            android:fontFamily="@font/berlin_sans_fb_regular"
            android:maxLines="1"
            android:text="UniqueID"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/berlin_sans_fb_regular"
            android:text="2020/10/27"
            android:textSize="16dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/list_fault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_unique_id"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/list_status"
            android:fontFamily="@font/berlin_sans_fb_regular"
            android:text="Fault"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/list_unique_id"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/list_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_fault"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/berlin_sans_fb_regular"
            android:maxLines="1"
            android:text="Description"
            android:textSize="16dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/list_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_date"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/berlin_sans_fb_regular"
            android:text="Status"
            android:textSize="16dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>